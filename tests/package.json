{
  "name": "sports-prediction-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing for Sports Prediction System using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:api": "playwright test --project=api-tests",
    "test:load": "playwright test --project=load-tests",
    "test:security": "playwright test --project=security-tests",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.0"
  },
  "keywords": [
    "azure-functions",
    "playwright",
    "e2e-testing",
    "sports-prediction",
    "api-testing"
  ],
  "author": "Sports Prediction Team",
  "license": "MIT"
}
